
border-1px($color)
  position relative
  &:after
    content ''
    display block
    position absolute
    width 100%
    height 1px
    bottom 0
    background-color $color

bg-image($url)
  background-image url($url+'@2x.png')
  @media (-webkit-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image url($url+'@3x.png')








